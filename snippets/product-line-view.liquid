<div class="viewer-head visible-lg" id="{{model_name}}-wrap">
  <div id="{{ model_name | downcase }}-bg">
    <h1 class="text-center jumbotron no-margin line-title">
      Choose Your {{ model_name }}

      <div class="dropdown">
        <button class="sharp btn btn-default dropdown-toggle" type="button" id="variantDrop" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
          <span class="caret blue"></span>
          <!-- <span class="icon pe&#45;7s&#45;cart"></span> -->
        </button>
        <ul class="dropdown-menu sharp" aria-labelledby="variantDrop">
          {% for id in cb_ids %}
            <li class="pe-7s-cart">
              <a class="{{ id }}-pattern round" href="http://{{ id }}.felloeyewe.pay.clickbank.net"></a>
              {% assign parts = collektion.products[forloop.index0].title | split: ' ' %}
              {% assign asize = parts | size %}
              <p>Buy {{ parts[0] }} {% if asize > 2 %}{{ parts[1] }}{% endif %}</p>
              {% if forloop.index0 == 1 %}
                <h4>Click a variant to puchase.</h4>
              {% endif %}
            </li>
          {% endfor %}
          <!-- <li role="separator" class="divider"></li> -->
          <!-- <li><a href="#">Separated link</a></li> -->
        </ul>
      </div>
    </h1>
    
