  Tortoise_Fantom 
  Black_Konvoy 
  Tortoise_Konvoy 
" | split: " " %}

{% assign insta-classes = "banner-border primary col-xs-4 col-sm-2 no-pads quick-view" %}
<div class="row">
  {% for product in insta_products_top %}
    {% assign product_handle = product | downcase | split: "_" | join: "-" %}
    <!-- Can change when handles are changed -->
    {% case product %}
    {% when "Ice_Blue_Heron" %}
      {% assign product_handle = "heron" %}
    {% when "Black_Fantom" %}
      {% assign product_handle = "fantom" %}
    {% when "Black_Konvoy" %}
      {% assign product_handle = "konvoy" %}
    {% endcase %}
    {% assign product_obj = all_products[product_handle] %}
    <a class="{{ insta-classes }}" href="{{ product_obj.url }}" data-pid="{{ product_obj.id }}">
      {% assign img_parts = product | split: "_" %}
      {% assign img_letter_1 = img_parts[0] | slice: 0 %}
      {% assign img_letter_2 = img_parts[1] | slice: 0 %}
      {% assign img = img_letter_1 | append: img_letter_2 | append: "_1.jpg" %}
      <img src="{{ img | asset_url }}" alt="{{ product | split: "_" | join: " " }}">
    </a>
  {% endfor %}
</div>
<div class="row hidden-xs">
  {% for product in insta_products_bottom %}
    {% assign product_handle = product | downcase | split: "_" | join: "-" %}
    <!-- Can change when handles are changed -->
    {% case product %}
    {% when "Ice_Blue_Heron" %}
      {% assign product_handle = "heron" %}
    {% when "Black_Fantom" %}
      {% assign product_handle = "fantom" %}
    {% when "Black_Konvoy" %}
      {% assign product_handle = "konvoy" %}
    {% endcase %}
    {% assign product_obj = all_products[product_handle] %}
    <a class="{{ insta-classes }}" href="{{ product_obj.url }}" data-pid="{{ product_obj.id }}">
