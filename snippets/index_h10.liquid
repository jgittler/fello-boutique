{% assign insta_products_top = "
  Tortoise_Konvoy
  Black_Konvoy 
  Black_Fantom  
  Tortoise_Fantom 
  Ice_Blue_Heron
  Dark_Green_Heron 
" | split: " " %}

{% assign insta_products_bottom = "
  Ice_Blue_Heron
